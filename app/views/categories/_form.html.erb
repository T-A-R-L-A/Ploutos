<%= form_for @category, :html => { :class => "form-horizontal category" } do |f| %>

  <% if @category.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @category.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
<div class="form-group">
    <%= f.label :parent_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-8">
    <div class="input-group">
	<span class="input-group-addon">1</span>
	  <%= f.collection_select(:parent_id, @categories, :id, :name, { include_blank: 'No Parent' }, { :id => 'C1', name: 'parent[id1]', class: 'form-control'}) %>
    </div>

    <div class="input-group">
	<span class="input-group-addon">2</span>
    <%= f.collection_select(:parent_id, @categories, :id, :name, { include_blank: 'No Parent' }, { :id => 'C2', name: 'parent[id2]', class: 'form-control'}) %>

    </div>
    <div class="input-group">
	<span class="input-group-addon">3</span>
    <%= f.collection_select(:parent_id, @categories, :id, :name, { include_blank: 'No Parent' }, { :id => 'C3', name: 'parent[id3]', class: 'form-control'}) %>

    </div>
    <div class="input-group">
	<span class="input-group-addon">4</span>
    <%= f.collection_select(:parent_id, @categories, :id, :name, { include_blank: 'No Parent' }, { :id => 'C4', name: 'parent[id4]', class: 'form-control'}) %>

    </div>
    <div class="input-group">
	<span class="input-group-addon">5</span>
    <%= f.collection_select(:parent_id, @categories, :id, :name, { include_blank: 'No Parent' }, { :id => 'C5', name: 'parent[id5]', class: 'form-control'}) %>
    </div>
    </div>
    <%=f.error_span(:parent_id) %>
  </div>

  <div class="form-group">
    <%= f.label :sort_order, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :sort_order, :class => 'form-control' %>
    </div>
    <%=f.error_span(:sort_order) %>
  </div>
  <div class="form-group">
    <%= f.label :custom_fields, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :custom_fields, :class => 'form-control' %>
    </div>
    <%=f.error_span(:custom_fields) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                categories_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>

<script>
$(document).ready( function() {
    $('#C1').click(function() {
      $.ajax({
        url: "<%= children_category_path %>",
	      data: {
      		id : $('#C1 option:selected').val(),
      		which : "C1",
      		form : "categories",
      		action: "<%= params[:action] %>"
	      },
        dataType: "script"
	});
    });

    $('#C2').click(function() {
	$.ajax({
        url: "<%= children_category_path %>",
        data: {
      		id : $('#C2 option:selected').val(),
      		which : "C2",
      		form : "categories",
      		action: "<%= params[:action] %>"
        },
        dataType: "script"
        });
    });

    $('#C3').click(function() {
      $.ajax({
        url: "<%= children_category_path %>",
        data: {
      		id : $('#C3 option:selected').val(),
      		which : "C3",
      		form : "categories",
      		action: "<%= params[:action] %>"
        },
        dataType: "script"
      });
    });

    $('#C4').click(function() {
      $.ajax({
        url: "<%= children_category_path %>",
        data: {
          id : $('#C4 option:selected').val(),
    	  	which : "C4",
    	  	form : "categories",
    		  action: "<%= params[:action] %>"
	      },
        dataType: "script"
      });
    });
});
</script>
