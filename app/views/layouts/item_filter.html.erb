<!DOCTYPE html>
<html>
<head>
  <title>Inventory</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container-fluid">
  <nav class="navbar navbar-default">

      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="<%= root_path %>">Tarla Inventory Tracking</a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li class=<%= ap(items_path) || ap(root_path)%>><a href="/items">Items <span class="sr-only">(<%= cp(root_path)%>)</span></a></li>
          <li class=<%= ap(pieces_index_path)%>><a href="/pieces">Pieces<span class="sr-only">(<%= cp(pieces_index_path)%>)</span></a></li>
          <li class="dropdown <%= ap(categories_path) || ap(locations_path)|| ap(units_path)%>">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Management <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><a href="<%= categories_path%>">Categories</a></li>
              <li><a href="<%= locations_path%>">Locations</a></li>
              <li><a href="<%= units_path%>">Units</a></li>
              <li role="separator" class="divider"></li>
              <li><a href="<%= admin_users_path%>"><b>Users</b></a></li>
            </ul>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li>
              <%= link_to(edit_user_registration_path) do %>
                <span class="fa fa-user"></span><b> <%= current_user.username %></b>
                <% end %>
          </li>
          <li>
          <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>  
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
  </nav>




<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

        <div class="col-lg-2">
          <div class="well sidebar-nav">
            <h3>Filter</h3>
            <hr>
              <div class="form-group ">
                <b>StockNo:</b><%= grid_filter @items_grid, :id_filter %><br />
                <b>Item Name:</b><%= grid_filter @items_grid, :name_filter %><br />
                <b>Brand:</b><%= grid_filter @items_grid, :brand_filter %><br />
                <b>Model:</b><%= grid_filter @items_grid, :model_filter %><br />
                <b>Price:</b><%= grid_filter @items_grid, :price_filter %><br />
                <b>Delivery Date:</b><%= grid_filter @items_grid, :delivery_filter %><br />

                <button class='btn btn-primary wg-external-submit-button' data-grid-name='grid'>Submit</button>
                <button class='btn btn-default wg-external-reset-button' data-grid-name='grid'>Reset</button>
              </div>

          </div><!--/.well -->
        </div><!--/span-->
        <div class="col-lg-10">
          <%= bootstrap_flash %>
          <%= yield %>
        </div>

      <footer>
        <p>&copy; Company 2016</p>
      </footer>

</div> <!-- /container -->


</body>
</html>
