        },
        dataType: "script"
      });
    });
    $('#C3').click(function() {
      $.ajax({
        url: "<%= children_category_path %>",
        data: {
		id : $('#C3 option:selected').val(),
		which : "C3",
		form : "item",
		action: "<%= params[:action] %>"
        },
        dataType: "script"
      });
    });
    $('#C4').click(function() {
      $.ajax({
        url: "<%= children_category_path %>",
        data: {
          	id : $('#C4 option:selected').val(),
	  	which : "C4",
	  	form : "item",
		action: "<%= params[:action] %>"
	  },
        dataType: "script"
      });
    });
});

