<h1>Listing items</h1>

<table>
	<tr>
		<th>Name</th>
		<th>Note</th>
		<th>Category</th>
	</tr>

	<% @items.each do |item| %>
		<tr>
			<td><%= item.name %></td>
			<td><%= item.note %></td>
			<td><%= item.try(:category).try(:name) %></td>
			<td><%= link_to 'Show', item_path(item) %></td> 
			<td><%= link_to 'Edit', edit_item_path(item) %></td>
			<td><%= link_to 'Destroy', item_path(item), method: :delete, data: { confirm: 'Are you sure?'} %></td>
			
		</tr>
	<% end %>
</table>

<%= link_to 'New item', new_item_path %>
